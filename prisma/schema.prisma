generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserLevel {
  id Int @id

  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  users User[]
}

model User {
  id String @id

  idUserLevel Int
  level       UserLevel @relation(fields: [idUserLevel], references: [id])

  username String
  email    String @unique
  password String

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  events Event[]
}

model Event {
  id String @id

  idUser String
  user   User   @relation(fields: [idUser], references: [id])

  name        String
  local       String
  firstDay    DateTime
  startTime   String
  lastDay     DateTime
  description String

  imageUrl String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
